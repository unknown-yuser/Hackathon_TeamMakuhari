= form_for @node, :html => { :class => "form-horizontal node" } do |f|
  - if @node.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        h3.panel-title
          = pluralize(@node.errors.count, "error")
          |  prohibited this node from being saved:
      .panel-body
        ul
          - @node.errors.full_messages.each do |msg|
            li
              = msg
  .control-group
    = f.label :node_id, :class => 'control-label'
    .controls
      = f.text_field :node_id, :class => 'form-control'
    = error_span(@node[:node_id])
  .control-group
    = f.label :latitude, :class => 'control-label'
    .controls
      = f.text_field :latitude, :class => 'form-control'
    = error_span(@node[:latitude])
  .control-group
    = f.label :longitude, :class => 'control-label'
    .controls
      = f.text_field :longitude, :class => 'form-control'
    = error_span(@node[:longitude])
  .control-group
    = f.label :link_1, :class => 'control-label'
    .controls
      = f.text_field :link_1, :class => 'form-control'
    = error_span(@node[:link_1])
  .control-group
    = f.label :link_2, :class => 'control-label'
    .controls
      = f.text_field :link_2, :class => 'form-control'
    = error_span(@node[:link_2])
  .control-group
    = f.label :link_3, :class => 'control-label'
    .controls
      = f.text_field :link_3, :class => 'form-control'
    = error_span(@node[:link_3])
  .control-group
    = f.label :link_4, :class => 'control-label'
    .controls
      = f.text_field :link_4, :class => 'form-control'
    = error_span(@node[:link_4])
  .control-group
    = f.label :link_5, :class => 'control-label'
    .controls
      = f.text_field :link_5, :class => 'form-control'
    = error_span(@node[:link_5])
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")),
                nodes_path, :class => 'btn btn-default'
