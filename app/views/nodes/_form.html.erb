      <%= f.text_field :link_5, :class => 'form-control' %>
    </div>
    <%= error_span(@node[:link_5]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            nodes_path, :class => 'btn btn-default' %>

<% end %>
